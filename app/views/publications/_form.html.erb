<%= simple_form_for(@publication) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :publication, label: "Publication about it", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new publication...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>