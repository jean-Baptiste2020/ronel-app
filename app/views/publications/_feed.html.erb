<div class="column is-half">
	<% if user_signed_in? %>
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64X64">
			<!--	<img src="https://steemitimages.com/DQmTeuJCgWJ9ikZtLD1Ey66qdois2mgbSQyFgcVXf6xPnK7/icon.png">  -->
				<%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
			</p>
		</figure>
		<div class="media-content">
			 <%= render 'publications/form' %>
		</div>
	</article>
	<% end %>

<% @publications.each do | publication | %>
	<div class="box">
		<article class="media">
			<div class="media-left">
				<figure class="image is-64X64">
				<!--	<img src="https://steemitimages.com/DQmTeuJCgWJ9ikZtLD1Ey66qdois2mgbSQyFgcVXf6xPnK7/icon.png">  -->
					<%= gravatar_image_tag(publication.user.email, size: 64, alt: publication.user.name) %>
				</figure>
			</div>
			<div class="media-content">
				<div class="content">
					<strong><%= publication.user.name %></strong><br />
					<small><%= publication.user.username %></small><br />
					<p><%= publication.publication %></p>
				</div>

				<nav class="level">
	  				<div class="level-left is-mobile">
	  					<%= link_to publication, class: "level-item" do %>
	  					  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
	  					<% end %>
		  				<%= link_to edit_publication_path(publication), class: "level-item" do %>
	  					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
	  					<% end %>
	  					<%= link_to publication, method: :delete, data: { confirm: "Are you sure you want to delete this publication?" } do %>
	  						<span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
	  					<% end %>
	  				</div>
  				</nav>

			</div>
		</article>
	</div>
  <% end %>
</div>